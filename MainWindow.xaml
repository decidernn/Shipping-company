        <Label x:Name="label1" Content="Судоходная компания" HorizontalAlignment="Center" Margin="0,219,0,0" VerticalAlignment="Top" Height="97" Width="846" FontFamily="Century Gothic" FontSize="72" FontWeight="Bold"/>
    </Grid>
